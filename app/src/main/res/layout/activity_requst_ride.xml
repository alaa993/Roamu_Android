<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:layoutDirection="ltr">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scrollbarThumbVertical="@android:color/transparent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/linear_child1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/liner"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    tools:ignore="NotSibling">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TableRow
                            android:id="@+id/Driver_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:gravity="center_vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/Driver_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ibrahim Driver"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <ImageView
                                android:id="@+id/DriverImage1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:maxLines="5"
                                android:src="@drawable/user_default" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/car_image1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:gravity="center_vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/car_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Black_Sany"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <ImageView
                                android:id="@+id/carImage1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:maxLines="5"
                                android:src="@drawable/car" />

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView3_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/from"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_pickup1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="بغداد، العراق" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView4_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/to"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_drop1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="بغداد، العراق" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView9_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pickup_point"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_PickupPoint1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="Mazzeh" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/Dateandtimefled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date_and_time"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/dateTimeVal1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall" />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/timefled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/travel_time"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/TimeVal1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView6_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/empty_seats"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_Empty_Seats1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="5" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/number_of_sets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/Howmanyseatsyouwant"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                                android:id="@+id/num_set1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:maxLines="1"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView5_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fare"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_fare1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:digits="1234567890"
                                android:enabled="false"
                                android:inputType="number"
                                android:maxLines="1"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/txt_fare_view1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/QIBus_softui_lbl_total_fare"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/fianl_fare1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:enabled="false"
                                android:maxLines="1"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall" />


                        </TableRow>

                        <TableRow
                            android:id="@+id/car_rating1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/carConditon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/carConditon"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/carConditonrating"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="8.5" />

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView7_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/driver_rate"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_DriverRate1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="8.5" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView8_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/travels_count"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_TravelsCount1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="4" />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView10_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Comments"
                                android:textColor="@color/mapbox_blue"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>

                        </TableRow>

                    </TableLayout>

<!--                    <View-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="1dp"-->
<!--                        android:layout_below="@+id/title"-->
<!--                        android:background="@color/liner" />-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_child1_1"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_cancel1"
                        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:layout_width="120dp"

                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_shape"
                        android:text="@string/cancel" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_confirm1"
                        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_shape"
                        android:text="@string/reseve" />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <View
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-10dp"
        android:background="@color/liner" />


</RelativeLayout>