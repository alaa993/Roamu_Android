<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:layoutDirection="ltr">


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_width">

    </com.google.android.gms.maps.MapView>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mapview"
        android:layout_marginTop="10dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scrollbarThumbVertical="@android:color/transparent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:text="@string/taxigo"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/linear_child1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/liner"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    tools:ignore="NotSibling">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/namee"
                                android:visibility="gone"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:maxLines="1"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile_numberr"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="+000000000000"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/from"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_pickup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="بغداد، العراق" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/to"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_drop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="بغداد، العراق" />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/Dateandtimefled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date_and_time"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/dateTimeVal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall" />


                        </TableRow>


                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/number_of_sets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/Howmanyseatsyouwant"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                                android:id="@+id/num_set"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:maxLines="1"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fare"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <EditText
                                android:id="@+id/txt_fare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:digits="1234567890"
                                android:enabled="false"
                                android:inputType="number"
                                android:maxLines="1"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/txt_fare_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/QIBus_softui_lbl_total_fare"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <EditText
                                android:id="@+id/fianl_fare"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:enabled="false"
                                android:maxLines="1"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall" />


                        </TableRow>

                        <TableRow
                            android:id="@+id/fare_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/ratingcar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fare"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:visibility="gone" />

                            <RatingBar
                                android:id="@+id/ratincar1"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:maxLines="2"
                                android:scaleX="0.5"
                                android:scaleY="0.5"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:theme="@style/RatingBar"
                                android:visibility="gone" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/car_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/carConditon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/carConditon"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:visibility="gone" />

                            <RatingBar
                                android:id="@+id/carConditonrating"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:maxLines="2"
                                android:rating="3"
                                android:scaleX="0.5"
                                android:scaleY="0.5"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:theme="@style/RatingBar"

                                android:visibility="gone" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/car_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:gravity="center_vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/car_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Black_Sany"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <ImageView
                                android:id="@+id/carImage"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:maxLines="5"
                                android:src="@drawable/car" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/Driver_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:gravity="center_vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/Driver_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ibrahim Driver"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <ImageView
                                android:id="@+id/DriverImage"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:maxLines="5"
                                android:src="@drawable/user_default" />

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/empty_seats"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_Empty_Seats"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="5" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/driver_rate"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_DriverRate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="8.5" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/travels_count"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_TravelsCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="4" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pickup_point"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_PickupPoint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:maxLines="1"
                                android:padding="1dp"
                                android:text="Mazzeh" />


                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vehicle_name"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/txt_vehiclename"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                        </TableRow>


                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/cubbon_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/enter_coubbon_number"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/cobun_num"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="BYTO20"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:visibility="gone" />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/smokedfled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Smoke"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/smoke_val"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:visibility="gone" />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:padding="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/txt_bag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="bag"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/bag_val"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:visibility="gone" />


                        </TableRow>


                    </TableLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/title"
                        android:background="@color/liner" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_child1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txt_calfare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/swipe_refresh"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:background="#2a2a2a"
                        android:padding="@dimen/margin_3"
                        android:text="@string/fare_calculating"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_cancel"
                        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:layout_width="120dp"

                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"

                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_shape"
                        android:text="@string/cancel" />

                    <Button
                        android:id="@+id/btn_cobo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button"
                        android:maxLines="1"
                        android:text="@string/applycoupon"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:visibility="gone" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_confirm"
                        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_shape"
                        android:text="@string/reseve" />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <View
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-10dp"
        android:background="@color/liner" />


</RelativeLayout>