<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@color/white">
            <android.support.v7.widget.AppCompatImageView
                android:layout_marginTop="4dp"
                android:id="@+id/img_membar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_person_pin_circle_black_24dp"
                android:layout_centerHorizontal="true"

                />

            <TextView
                android:id="@+id/driver_name"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_group_black_24dp"
                android:layout_below="@id/img_membar"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:text="Ahmed Sdiq"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_marginBottom="@dimen/margin_5"
                android:id="@+id/driver_Phone"
                android:textSize="18sp"
                android:layout_centerInParent="true"

                android:layout_below="@+id/driver_name"
                android:layout_width="wrap_content"
                android:text="Ahmed Sdiq"
                android:layout_height="wrap_content"
                />


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative_parent"
                android:background="@android:color/darker_gray" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>