<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/customborder">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Notificatoin_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:src="@drawable/user_default"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp"/>

    <TextView
        android:text="ibrahim Marie"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/Notificatoin_textViewName"
        android:layout_toRightOf="@id/Notificatoin_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />

    <TextView
        android:text="this is an example of how the text of the post should apear"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/Notificatoin_textViewText"
        android:layout_below="@+id/Notificatoin_textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Notificatoin_image"
        android:maxLines="5"
        android:textColor="#303F64"/>

</RelativeLayout>