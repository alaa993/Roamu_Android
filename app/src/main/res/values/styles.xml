<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hint</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="colorPrimaryDark">@color/hint</item>
        <item name="colorAccent">@color/black</item>
        <item name="actionBarStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>


    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="FirebaseLoginTheme" parent="FirebaseUI">
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/white</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditText.Login" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>
    <!-- Base application theme. -->
    <style name="QIBusSoftui" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/QIBus_softui_colorPrimary</item>
        <item name="colorPrimaryDark">@color/QIBus_softui_colorPrimaryDark</item>
        <item name="colorAccent">@color/QIBus_softui_colorAccent</item>
        <item name="android:fontFamily">assest/font/googlesansregular</item>

        <item name="colorControlActivated">@color/QIBus_softui_colorPrimary</item>
    </style>

    <style name="QIBusSoftui.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="QIBusSoftui.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/QIBus_softui_colorPrimary</item>
        <item name="colorPrimaryDark">@color/QIBus_softui_colorPrimaryDark</item>
        <item name="colorAccent">@color/QIBus_softui_colorAccent</item>
        <item name="android:fontFamily">@assest/font/googlesansregular</item>

        <item name="colorControlActivated">@color/QIBus_softui_colorPrimary</item>
    </style>

    /* Rating bar theme */

    <style name="RatingBar" parent="Theme.MaterialComponents">
        <item name="colorControlNormal">@color/QIBus_softui_rating</item>
        <item name="colorControlActivated">@color/QIBus_softui_rating</item>
    </style>

    /* Toolbar theme */

    <style name="Toolbar">
        <item name="android:fontFamily">@assest/font/googlesansextrabold</item>
    </style>

    /* Dialog animation */

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/qibus_softui_anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/qibus_softui_anim_slide_bottom</item>
    </style>

    /* bottom navigation theme */

    <style name="bottomnavigation" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/QIBus_softui_colorPrimary</item>
        <item name="colorPrimaryDark">@color/QIBus_softui_colorPrimaryDark</item>
        <item name="colorControlActivated">@color/QIBus_softui_colorPrimary</item>
        <item name="colorControlHighlight">@color/QIBus_softui_colorPrimaryRipple</item>
    </style>


    <style name="IQBUSSoftUIScreenBackground">
        <item name="android:background">#f2f4ff</item>
    </style>

    <style name="IQBUSSoftUIDrawableBackground"></style>

    <style name="IQBUSSoftUIDrawableBackgroundBotton">
        <!--<item name="android:background">@drawable/button_effect</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
